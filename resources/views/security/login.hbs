{{#extend "stylesheets"}}
<link rel="stylesheet" href="/css/index.css"/>
{{/extend}}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="username">{{t 'security.login.username'}}</label>
                    <input type="text" class="form-control" name="username" id="username">
                </div>
                <div class="form-group">
                    <label for="password">{{t 'security.login.password'}}</label>
                    <input type="password" class="form-control" name="password" id="password">
                </div>
                <input type="submit" class="btn btn-primary w-100" value="{{t 'security.login.submit'}}">
            </form>
        </div>
    </div>
</div>
